<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- press true -->
    <item android:state_pressed="true" >
		<shape
		    android:shape="rectangle">
		    <gradient
		        android:startColor="#BADDFF"
		        android:endColor="#FFFFFF"
		        android:angle="270" />
			<corners
				android:radius="8dp"/>
			<stroke
		        android:color="#010101"
		        android:width="1dp" />
		    <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
		</shape>
    </item>

    <!-- press false -->
    <item android:state_pressed="false">

		<shape
		    android:shape="rectangle">
		    <gradient
		        android:startColor="#00FFFFFF"
		        android:endColor="#00FFFFFF"
		        android:centerColor="#00FFFFFF"
		        android:angle="90" />
			<corners
				android:radius="8dp"/>
		    <stroke
		    	android:color="#010101"
			    android:width="1dp" />
			<padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
		</shape>

    </item>
</selector>